<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameHub" >

    <TextView
        android:id="@+id/title_gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Game Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/hint_text_endDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_gameName"
        android:text="End Date and Time:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/hint_text_endDatetime"
        android:layout_below="@+id/title_gameName"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/text_endDatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hint_text_endDatetime"
        android:text="Date and Time"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/hint_text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_endDatetime"
        android:layout_below="@+id/text_endDatetime"
        android:paddingTop="10dp"
        android:text="Score (Items I Found):"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hint_text_score"
        android:layout_below="@+id/hint_text_score"
        android:paddingBottom="10dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/bar2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_score"
        android:background="@android:color/darker_gray" />

    <ListView
        android:id="@+id/listview_remainingItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hint_remainingItems" >
    </ListView>

    <TextView
        android:id="@+id/title_remainingItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bar2"
        android:paddingTop="10dp"
        android:text="Remaining Items:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/hint_remainingItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_remainingItems"
        android:text="Touch to mark as found"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/text_totalPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/title_remainingItems"
        android:layout_alignTop="@+id/text_score"
        android:layout_toRightOf="@+id/text_score"
        android:text=" out of 0"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>